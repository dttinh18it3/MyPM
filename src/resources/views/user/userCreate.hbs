<style>
    label{
        margin-top: 5px;
    }
</style>
<div class="container-fluid">
    <section class="section">
    <!--Section heading-->
    <h2 class="section-heading h1 pt-4">Thêm dự án mới</h2>
    <div class="row">
        <!--Grid column-->
        <div class="col-md-8 col-xl-9">
            <form id="contact-form" name="contact-form" action="/create" method="POST">
                <!--Grid row-->
                <div class="row">
                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form">
                            <label for="name" class="">Tên dự án</label>
                            <input type="text" id="name" name="name" class="form-control" placeholder="">
                        </div>
                    </div>
                    <!--Grid column-->
                </div>
                <!--Grid row-->
                <!--Grid row-->
                <div class="row">
                    <div class="col-md-6">
                        <div class="md-form">
                            <label for="subject" class="">Thể loại</label>
                            <select name="" id="" class="form-control">
                                <option value="0">IT solution</option>
                                <option value="1">Maketing</option>
                                <option value="2">Sale</option>
                                <option value="3">Other</option>
                            </select>
                        </div>
                    </div>
                </div>
                <!--Grid row-->
                <!--Grid row-->
                <div class="row">
                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form">
                            <label for="message">Mô tả</label>
                            <textarea type="text" id="message" name="message" rows="2" class="form-control md-textarea" placeholder=""></textarea>
                        </div>
                    </div>
                </div>
                <!--Grid row-->
                <!--Grid row-->
                <div class="row">
                    <!--Grid column-->
                    <div class="col-md-12">
                        <div class="md-form">
                            <br>
                            <input type="radio"> Public
                            <input type="radio"> Private
                        </div>
                    </div>
                </div>
                <!--Grid row-->
            </form>
            <div class="center-on-small-only">
                <a class="btn btn-primary">Xác nhận</a>
            </div>
            <div class="status"></div>
        </div>
        <!--Grid column-->
    </div>
</section>
</div>